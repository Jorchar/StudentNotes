<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/quickNavBar"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?attr/colorSecondaryVariant">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_undo"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                app:icon="@drawable/ic_baseline_undo_32"
                app:iconSize="50dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_redo"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                app:icon="@drawable/ic_baseline_redo_32"
                app:iconSize="50dp"/>

            <Spinner
                android:id="@+id/font_size_number"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_spinner"
                android:layout_margin="6dp"/>

            <Spinner
                android:id="@+id/font_color"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_spinner"
                android:layout_margin="6dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_save"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                app:icon="@drawable/ic_baseline_save_32"
                app:iconSize="50dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/quickNavBar"
        android:background="?attr/colorSecondaryVariant">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_bold"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                app:icon="@drawable/ic_baseline_format_bold_24"
                app:iconSize="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_italic"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                app:icon="@drawable/ic_baseline_format_italic_32"
                app:iconSize="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_subscript"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                app:icon="@drawable/ic_baseline_subscript_32"
                app:iconSize="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_superscript"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                app:icon="@drawable/ic_baseline_superscript_32"
                app:iconSize="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_strikethrough"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                app:icon="@drawable/ic_baseline_strikethrough_s_32"
                app:iconSize="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_underline"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                app:icon="@drawable/ic_baseline_format_underlined_32"
                app:iconSize="50dp" />

            <Spinner
                android:id="@+id/heading_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bg_spinner"
                android:layout_margin="6dp"/>

            <Spinner
                android:id="@+id/bg_color"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_spinner"
                android:layout_margin="6dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_align_left"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                app:icon="@drawable/ic_baseline_format_align_left_32"
                app:iconSize="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_align_center"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                app:icon="@drawable/ic_baseline_format_align_center_32"
                app:iconSize="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_align_right"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                app:icon="@drawable/ic_baseline_format_align_right_32"
                app:iconSize="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_blockquote"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                app:icon="@drawable/ic_baseline_format_quote_32"
                app:iconSize="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_insert_bullets"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                app:icon="@drawable/ic_baseline_format_list_bulleted_32"
                app:iconSize="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_insert_numbers"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                app:icon="@drawable/ic_baseline_format_list_numbered_32"
                app:iconSize="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_insert_checkbox"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                app:icon="@drawable/ic_baseline_check_circle_outline_32"
                app:iconSize="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_insert_audio"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:text="audio" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_insert_image"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                app:icon="@drawable/ic_baseline_image_32"
                app:iconSize="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_ocr"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                app:icon="@drawable/ic_baseline_image_search_32"
                app:iconSize="50dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>